{
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint -c ./.eslintrc.cjs --ext .js,.ts,.svelte ./packages",
    "format": "prettier \"./**/*.svelte\" --check",
    "release": "changeset publish",
    "test:vite": "cd packages/vite && npx vitest run && cd ../..",
